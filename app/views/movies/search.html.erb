<h1>Searching movies</h1>

  <%= form_tag search_movies_path, :method => 'get' do %>
  <p>
  <%= label_tag :search_tag %>
  <%= text_field_tag :search_text, @search_text %>
  </p>
  <p>
  <%= label_tag 'Check for whole word search' %>
  <%= check_box_tag :word_only, "", @word_only %>
  </p>
  <p>
  <%= submit_tag 'Search' %>
  </p>
  <% end %>
  <% if @movies then %>
    <table>
    <tr><th>Title</th><th>Year</th></tr>
    <% @movies.each do |movie| %>
    <tr><td><%= movie.title %></td><td><%= movie.year %></td></tr>
    <% end %>
    </table>
  <% end %>
<br />

<%= link_to 'New Movie', new_movie_path %>
<%= link_to 'Back', movies_path %>
